<body style="background-color: #ECF6FE">
  <header class="container-fluid">
    <div class="center">
      <h1>Log in</h1>
    </div>
  </header>

    <div>
      <%= form_with class: 'col-xs-6', url: 'login', local: true do |form| %>
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

        <% flash.each do |key, value| %>
          <div class="alert alert-<%= key %>"><%= value %></div>
        <% end %>

        <p>
          <%= form.label :username %><br>
          <%= form.text_field :username, class: 'col-xs-12' %>
        </p>

        <p>
          <%= form.label :password %><br>
          <%= form.password_field :password_digest, class: 'col-xs-12' %>
        </p>

        <p>
          <%= form.submit 'Sign in', class: 'btn btn-default with-margin' %>
          <%= link_to 'Sign up', new_user_path, class: 'btn btn-default with-margin' %>
        </p>
      <% end %>

    </div>
</body>