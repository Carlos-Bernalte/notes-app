<% if !logged? %>
  <%= controller.redirect_to root_path %>
<% else %>
  <body>
    <div>
      <div>
        <%= form_with scope: :user, model: @users, local: true do |form| %>
          <p>
            <%= form.label :user_name %><br>
            <%= form.text_field :user_name, :disabled => true %>
          </p>
          <p>
            <%= form.label :email %><br>
            <%= form.text_area :email, :disabled => true, style: 'height: 200px'%>
          </p>
        <% end %>
      </div>
      <div>
        <%= link_to 'Back', users_path, class: 'btn btn-info with-margin' %>
      </div>
    </div>
  </body>
<% end %>