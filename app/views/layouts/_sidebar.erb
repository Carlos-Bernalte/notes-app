
<%= stylesheet_link_tag "sidebar" %>

<% user_id = user_id(session[:username])%>
<div class="left_col scroll-view" style="width: 100%">
	
  <!-- menu profile quick info -->
  <div class="profile clearfix" style="padding-top: 10px">
    <h3 class="profile_info">
      <p>Welcome, <%= session[:username] %></p>
    </h3>
  </div>

  <!-- /menu profile quick info -->
  <!-- sidebar menu -->
  <div id="sidebar-menu" class="active main_menu_side hidden-print main_menu ">
    <div class="menu_section">
      <ul class="nav side-menu" id="nav-menu">
      	<% if user_session_is_admin? %>
	        <!-- User admin view -->
	        <li ><%= link_to '<i class="fa fa-sticky-note"></i> Notes list'.html_safe, user_notes_url(user_id) %></li>
          <li ><%= link_to '<i class="fa fa-id-card-o"></i> Admin management'.html_safe, users_path %></li>
	        <!-- /User admin view -->
	    <% else %>
	    	<li ><%= link_to '<i class="fa fa-sticky-note"></i> Notes list'.html_safe, user_notes_url(user_id) %></li>
	    <% end %>
        <!-- Collections view -->
        <li><%= link_to '<i class="fa fa-book"></i> Collections list'.html_safe, user_notes_url(user_id) %></li>
        <!-- /Collections view -->
        <!-- Friends view -->
        <li><%= link_to '<i class="fa fa-address-book"></i> Friends list'.html_safe, user_notes_url(user_id) %>
        </li>
        <!-- /Friends view -->  
        <!-- Edit view -->
        <li><%= link_to '<i class="fa fa-pencil"></i> Edit profile'.html_safe, edit_user_path(user_id)  %>
        </li>
        <!-- /Edit view -->  
      </ul>
    </div>
    <div>
      <%= link_to 'Log Out', '/logout', class: "button-primary"  %>
    </div>
  </div>
  <!-- /sidebar menu -->
</div>


